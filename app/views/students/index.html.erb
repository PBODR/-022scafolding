<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <div style="height: 50px;">
        <%= student.name %>
        <%= student.age %>
        <%= student.email %>
        <%= link_to 'Show', student, class:'btn btn-secondary' %>
        <%= link_to 'Edit', edit_student_path(student), class:'btn btn-primary' %>
        <%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-warning' %>
      </div>
    <% end %>
  </tbody>
</table>


<br>

