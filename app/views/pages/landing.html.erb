<h1>Pages#landing</h1>
<p>Find me in app/views/pages/landing.html.erb</p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.email %></td>
        <td><%= link_to 'Show', student, class:'btn btn-secondary' %></td>
        <td><%= link_to 'Edit', edit_student_path(student), class:'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-warning' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
